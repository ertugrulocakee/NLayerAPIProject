@using NLayerAPI.Core.DTOs
@model  List<CategoryDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Kategoriler</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Kategori Adı</th>
             
                          <th>İşlemler</th>
           
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.Id</td>
                          <td>@item.Name</td>
            
                          <td><a href="/Category/Remove/@item.Id" class="btn btn-danger">Sil</a>
                              <a href="/Category/UpdateCategory/@item.Id" class="btn btn-success">Düzenle</a>                            
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    <br/>
                 <a href="/Category/SaveCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
                  </div>
                </div>
              </div>




