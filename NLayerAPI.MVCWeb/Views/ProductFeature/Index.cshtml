@using NLayerAPI.Core.DTOs
@model List<ProductFeatureWithProductDTO>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Ürünler</h4>
                   <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Ürün Adı</th>  
                          <th>Ürün Rengi</th>
                          <th>Ürün Genişliği</th>
                          <th>Ürün Boyu</th>
                          <th>Ürün Stok Adeti</th>
                          <th>Ürün Fiyatı</th>
                          <th>İşlemler</th>
           
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.Id</td>
                          <td>@item.Product.Name</td>
                          <td>@item.Color</td>
                          <td>@item.Width</td>
                          <td>@item.Height</td>
                          <td>@item.Product.Stock</td>
                          <td>@item.Product.Price</td>
            
                          <td><a href="/ProductFeature/Remove/@item.Id" class="btn btn-danger">Sil</a>
                              <a href="/ProductFeature/UpdateProductFeature/@item.Id" class="btn btn-success">Düzenle</a>                            
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    </div>
                    <br/>
                 <a href="/ProductFeature/SaveProductFeature/" class="btn btn-primary">Yeni Ürün Detayı Ekle</a>
                  </div>
                </div>
              </div>






